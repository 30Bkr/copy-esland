---
import Logo from "./Logo.astro";
import { getI18N } from '../i18n';

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale });
---

<section class="relative z-10 mx-auto my-24 max-w-[70ch] text-pretty px-6 text-left text-xl sm:px-20 text-white">
  <Logo class="w-16 text-white m-auto mb-12" />
  <h1 class="text-5xl font-semibold text-center text-wrap mx-auto mb-10 tracking-wide">{i18n?.INTRO_TITLE}<br />{i18n?.INTRO_TITLE_AFTER_BR}</h1>
  <p set:html={i18n?.INTRO_DESCRIPTION_1}>
  <p/>
  <p set:html={i18n?.INTRO_DESCRIPTION_2}>
  </p>
  <p set:html={i18n?.INTRO_DESCRIPTION_3}>
  </p>
</section>